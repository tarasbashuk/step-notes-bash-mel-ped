extends layout

block contentTodos
  #myDIV.header-todos
    h1= title
    br
    input#myInput(type='text', placeholder='Item list...')
    input#inputId(type='hidden', value=todo_id)
    span.addBtn Add
  ul#myUL
    each todo in todos
     li(class=`${todo.checked ? "checked listItem" :"listItem"}` )= todo.text
  hr
  input.btn.btn-primary(type='button', value='Exit')
  a.btn.btn-danger.delete-todo(href='#', data-id=todo_id) Delete